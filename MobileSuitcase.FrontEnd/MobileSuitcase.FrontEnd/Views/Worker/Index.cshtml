@using MobileSuitcase.Entities.Models
@model List<Worker>
@{
    ViewData["Title"] = "Colaboradores de Mobile SuitCase";
}

<h2>Colaboradores de Mobile SuitCase</h2>

<div class="overflow_auto">
    <table class="table">
        <thead class="thead-dark">
            <tr class="v_middle">
                <th scope="col" class="align_center">Nombre</th>
                <th scope="col" class="align_center">Apellido</th>
                <th scope="col" class="align_center">Cargo</th>
                <th scope="col" class="align_center">Edad</th>
                <th scope="col" class="align_center">Imagen</th>
            </tr>
        </thead>
        <tbody>
            @if (Model.Count > 0)
            {
                foreach (var item in Model)
                {
                    <tr class="v_middle align_center">
                        <td>@item.FirstName</td>
                        <td>@item.LastName</td>
                        <td>@item.Position</td>
                        <td>@item.Age</td>
                        <td><img src="@item.ImagePath" style="width:100px; height:100px" class="img-thumbnail rounded_img" /></td>
                    </tr>
                }
            }
            else
            {
                <tr>
                    <td class="" colspan="5">No existen registros.</td>
                </tr>
            }
        </tbody>
    </table>
</div>
